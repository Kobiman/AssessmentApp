@foreach (var r in response)
{
    <MudCard>
        <MudCardContent>
            <MudText>Q1</MudText>
            <MudElement> @((MarkupString)r.Question)</MudElement>
            </MudCardContent>
            <MudCardActions>
                <MudRadioGroup T="int" @bind-SelectedOption="@r.Weight" Style="margin-left:1vw">
                    <MudRadio Option="1" Color="Color.Default" UnCheckedColor="Color.Default">1</MudRadio>
                    <MudRadio Option="2" Color="Color.Default" UnCheckedColor="Color.Default">2</MudRadio>
                    <MudRadio Option="3" Color="Color.Default" UnCheckedColor="Color.Default">3</MudRadio>
                    <MudRadio Option="4" Color="Color.Default" UnCheckedColor="Color.Default">4</MudRadio>
                </MudRadioGroup>
            </MudCardActions>
        </MudCard>
    <br />
}

